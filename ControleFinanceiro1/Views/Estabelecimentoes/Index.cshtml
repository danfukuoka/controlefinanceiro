@model IEnumerable<ControleFinanceiro1.Models.Estabelecimento>

@{
    ViewBag.Title = "Estabelecimentos";
}

<h3 style="background-color: #337ab7;color: #fff;padding: 3px;">Estabelecimentos</h3>

<table class="table">
    <tr>
        <th>    
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink(" ", "Details", new { id = item.EstabelecimentoID }, new { @class = "glyphicon glyphicon-eye-open cinza" }) |
            @Html.ActionLink(" ", "Edit", new { id = item.EstabelecimentoID }, new { @class = "glyphicon glyphicon-pencil cinza" }) |
            @Html.ActionLink(" ", "Delete", new { id=item.EstabelecimentoID }, new { @class = "glyphicon glyphicon-trash cinza" })
        </td>
    </tr>
}

</table>

<br />

<p class="text-right">
