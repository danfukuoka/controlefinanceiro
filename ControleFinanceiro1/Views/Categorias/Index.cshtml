@model IEnumerable<ControleFinanceiro1.Models.Categoria>

@{
    ViewBag.Title = "Categorias";
}

<h3 style="background-color: #337ab7;color: #fff;padding: 3px;">Categorias</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
           
            @Html.ActionLink(" ", "Details", new { id = item.CategoriaID }, new { @class = "glyphicon glyphicon-eye-open cinza" }) |
            @Html.ActionLink(" ", "Edit", new { id = item.CategoriaID }, new { @class = "glyphicon glyphicon-pencil cinza" }) |
            @Html.ActionLink(" ", "Delete", new { id=item.CategoriaID }, new { @class = "glyphicon glyphicon-trash cinza" })

        </td>
    </tr>
}

</table>

<br />

<p class="text-right">
    <!-- @Html.ActionLink("Adicionar", "Create") -->
    <button type="button" class="btn btn-success" onclick="location.href = 'Categorias/Create';"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Adicionar</button>

</p>
